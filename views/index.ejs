<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-game" class="border-shadow">
        <span class="text-gradient">New Game <i class="fas fa-user"></i></span>
      </a>
    </div>

    <!--form Handling-->
    <form action="/" method="POST">
      <table class="table">
        <thread class="thread-dark">
          <tr>
            <th>ID</th>
            <th>Game Title</th>
            <th>Description</th>
            <th>Type</th>
            <th>Price</th>
            <th>Platform</th>
            <th>Sku</th>
          </tr>
        </thread>
        <tbody>
          <%-include('include/_show')%>
        </tbody>
      </table>
    </form>
  </div>
</main>
<!-- /main site-->

<!-- include footer-->
<%-include('include/_footer')%>
<!-- /include footer-->
